<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/color_gris"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/lblNumeroGestionTracking"
            style="@style/card_label"
            android:text="@string/lbl_gestion_number"
            app:layout_constraintBottom_toBottomOf="@+id/textViewNumeroGestionTracking"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewNumeroGestionTracking" />

        <TextView
            android:id="@+id/textViewNumeroGestionTracking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imageViewStatus"
            app:layout_constraintStart_toEndOf="@+id/lblNumeroGestionTracking"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblNombreClienteTracking"
            style="@style/card_label"
            android:layout_width="0dp"
            android:text="@string/lbl_client_name"
            app:layout_constraintBottom_toBottomOf="@+id/textViewNombreClienteTracking"
            app:layout_constraintEnd_toEndOf="@+id/lblNumeroGestionTracking"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textViewNombreClienteTracking" />

        <TextView
            android:id="@+id/textViewNombreClienteTracking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textViewNumeroGestionTracking"
            app:layout_constraintTop_toBottomOf="@+id/textViewNumeroGestionTracking" />

        <TextView
            android:id="@+id/lblEstadoGestionTracking"
            style="@style/card_label"
            android:layout_width="0dp"
            android:text="@string/lbl_status"
            app:layout_constraintBottom_toBottomOf="@+id/textViewEstadoGestionTracking"
            app:layout_constraintEnd_toEndOf="@+id/lblNombreClienteTracking"
            app:layout_constraintStart_toEndOf="@+id/lblNombreClienteTracking"
            app:layout_constraintStart_toStartOf="@+id/lblNombreClienteTracking"
            app:layout_constraintTop_toTopOf="@+id/textViewEstadoGestionTracking" />

        <TextView
            android:id="@+id/textViewEstadoGestionTracking"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/textViewNombreClienteTracking"
            app:layout_constraintStart_toStartOf="@+id/textViewNombreClienteTracking"
            app:layout_constraintTop_toBottomOf="@+id/textViewNombreClienteTracking" />

        <ImageView
            android:id="@+id/imageViewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@android:string/untitled"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>